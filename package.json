    "eslint": "9.x",
    "eslint-plugin-import": "^2.29.1",
    "globals": "^15.7.0",
    "husky": "^9.0.11",
    "prisma": "^5.16.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.10",
